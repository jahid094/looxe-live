<!-- Swiper JS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js" defer></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background-color: #fafafa;
  }

  @media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient">
  <div class="page-width">
    <div class="video-with-content-section">
      <div class="video-section">
        <swiper-container
          class="mySwiper"
          slides-per-view="2.3"
          space-between="15"
          free-mode="true"
        >
          {% for block in section.blocks %}
            <swiper-slide>
              <video
                class="video_slider"
                loop
                playsinline
                poster="{{ block.settings.thumbnail }}"
                style="width:100%;border-radius: 15px;"
              >
                {% for source in block.settings.video.sources %}
                  <source
                    src="{{ source.url }}"
                    type="{{ source.mime_type }}"
                  >
                {% endfor %}
                Your browser does not support the video tag.
              </video>

              <div class="play-button-wrapper" bis_skin_checked="1" style="display: none;">
                <div title="Play video" class="play-gif" bis_skin_checked="1">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 80 80">
                    <!-- Outer Circle with White Background -->
                    <path d="M40 0a40 40 0 1040 40A40 40 0 0040 0z" fill="#ffffff"></path>
                    <!-- Play Button Triangle with #e3d2fd Color -->
                    <path d="M26 61.56V18.44L64 40z" fill="#000"></path>
                  </svg>
                </div>
              </div>
            </swiper-slide>
          {% endfor %}
        </swiper-container>
      </div>
      <div class="text_box" bis_skin_checked="1">
        <h3>{{ section.settings.heading }}</h3>

        <div class="pro_icon_text" bis_skin_checked="1">
          <div class="item circleBarProgress" bis_skin_checked="1">
            <div class="progress_icn" bis_skin_checked="1">
              <div
                class="circleBarWrapper"
                style="background: conic-gradient(#7069BC 0deg, #7069BC {{ section.settings.percentage_1 }}%, #E3D2FD {{ section.settings.percentage_1 }}%);"
                bis_skin_checked="1"
              >
                <div class="circleBarPercent" bis_skin_checked="1">
                  <span>{{ section.settings.percentage_1 }}</span>%
                </div>
              </div>
            </div>
            <div class="text" bis_skin_checked="1">{{ section.settings.description_1 }}</div>
          </div>

          <div class="item circleBarProgress" bis_skin_checked="1">
            <div class="progress_icn" bis_skin_checked="1">
              <div
                class="circleBarWrapper"
                style="background: conic-gradient(#7069BC 0deg, #7069BC {{ section.settings.percentage_2 }}%, #E3D2FD {{ section.settings.percentage_2 }}%);"
                bis_skin_checked="1"
              >
                <div class="circleBarPercent" bis_skin_checked="1">
                  <span>{{ section.settings.percentage_2 }}</span>%
                </div>
              </div>
            </div>
            <div class="text" bis_skin_checked="1">{{ section.settings.description_2 }}</div>
          </div>

          <div class="item circleBarProgress" bis_skin_checked="1">
            <div class="progress_icn" bis_skin_checked="1">
              <div
                class="circleBarWrapper"
                style="background: conic-gradient(#7069BC 0deg, #7069BC {{ section.settings.percentage_3 }}%, #E3D2FD {{ section.settings.percentage_3 }}%);"
                bis_skin_checked="1"
              >
                <div class="circleBarPercent" bis_skin_checked="1">
                  <span>{{ section.settings.percentage_3 }}</span>%
                </div>
              </div>
            </div>
            <div class="text" bis_skin_checked="1">{{ section.settings.description_3 }}</div>
          </div>
        </div>

        <div class="b-product-card__benefits-asterisk" bis_skin_checked="1">
          <p>{{ section.settings.asterisk_text }}</p>
        </div>

        <div class="vid_img_btn" bis_skin_checked="1">
          <a class="btn template-v12" href="{{ section.settings.offer_link }}"
            ><span>{{ section.settings.offer_text }}</span></a
          >
        </div>

        <div class="video-rating-text" bis_skin_checked="1">
          <div class="video-rating-star" bis_skin_checked="1">
            <svg width="18" height="17" viewBox="0 0 18 17" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3.85156 16.3333L5.20573 10.4792L0.664062 6.54167L6.66406 6.02083L8.9974 0.5L11.3307 6.02083L17.3307 6.54167L12.7891 10.4792L14.1432 16.3333L8.9974 13.2292L3.85156 16.3333Z" fill="#000"></path>
            </svg>

            <svg width="18" height="17" viewBox="0 0 18 17" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3.85156 16.3333L5.20573 10.4792L0.664062 6.54167L6.66406 6.02083L8.9974 0.5L11.3307 6.02083L17.3307 6.54167L12.7891 10.4792L14.1432 16.3333L8.9974 13.2292L3.85156 16.3333Z" fill="#000"></path>
            </svg>

            <svg width="18" height="17" viewBox="0 0 18 17" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3.85156 16.3333L5.20573 10.4792L0.664062 6.54167L6.66406 6.02083L8.9974 0.5L11.3307 6.02083L17.3307 6.54167L12.7891 10.4792L14.1432 16.3333L8.9974 13.2292L3.85156 16.3333Z" fill="#000"></path>
            </svg>

            <svg width="18" height="17" viewBox="0 0 18 17" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3.85156 16.3333L5.20573 10.4792L0.664062 6.54167L6.66406 6.02083L8.9974 0.5L11.3307 6.02083L17.3307 6.54167L12.7891 10.4792L14.1432 16.3333L8.9974 13.2292L3.85156 16.3333Z" fill="#000"></path>
            </svg>

            <svg width="18" height="17" viewBox="0 0 18 17" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3.85156 16.3333L5.20573 10.4792L0.664062 6.54167L6.66406 6.02083L8.9974 0.5L11.3307 6.02083L17.3307 6.54167L12.7891 10.4792L14.1432 16.3333L8.9974 13.2292L3.85156 16.3333Z" fill="#000"></path>
            </svg>
          </div>
          <div class="rating-content">
            {{ section.settings.rating_text }} <strong>{{ section.settings.rating_value }}</strong> | {{ section.settings.review_count }} trusted reviews
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Initialize Swiper -->
<script>
  {% comment %} var swiper = new Swiper(".mySwiper", {
    slidesPerView: 3,
    spaceBetween: 30,
    freeMode: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
  }); {% endcomment %}

  document.addEventListener("DOMContentLoaded", (event) => {
    const slides = document.querySelectorAll("swiper-slide");
  
    slides.forEach(slide => {
      // Find video and play button within each slide
      const video = slide.querySelector(".video_slider");
      const playButton = slide.querySelector(".play-button-wrapper");

      playButton.style.display = "block";
  
      if (video && playButton) {
        // Function to toggle play/pause
        function togglePlay() {
          if (video.paused || video.ended) {
            video.removeAttribute('poster');
            video.play();
          } else {
            video.pause();
          }
        }
  
        // Add click event listener to the play button
        playButton.addEventListener("click", togglePlay);
  
        // Add event listeners to hide/show play button based on video state
        video.addEventListener("playing", () => {
          playButton.style.opacity = 0;
        });
        video.addEventListener("pause", () => {
          playButton.style.opacity = 1;
        });
      }
    });
  });
</script>


